<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/planning_ingredient_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:minHeight="60dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="@color/black"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/planning_ingredient_main_alpha_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.20"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/planning_ingredient_inner_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="60dp"
                android:weightSum="7">

                <LinearLayout
                    android:id="@+id/planning_ingredient_slip_name_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <com.groctaurant.groctaurant.CustomView.FuturaMediumTextView
                        android:id="@+id/planning_ingredient_slip_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center|start"
                        android:text="1 ) Salt"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/planning_ingredient_order_id_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <com.groctaurant.groctaurant.CustomView.FuturaMediumTextView
                        android:id="@+id/planning_ingredient_order_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center|start"
                        android:text="20180927104056website_2_4"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/planning_ingredient_weight_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.groctaurant.groctaurant.CustomView.FuturaMediumTextView
                        android:id="@+id/planning_ingredient_weight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="5 gms"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/planning_ingredient_options"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/planning_ingredient_alpha_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0"
                            android:background="@color/white" />

                        <ImageView
                            android:id="@+id/planning_ingredient_more_options"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:src="@drawable/ic_left_arrow" />

                        <LinearLayout
                            android:id="@+id/planning_ingredient_option_right"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:weightSum="4">

                            <ImageView
                                android:id="@+id/planning_ingredient_relabel"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:src="@drawable/ic_label" />

                            <ImageView
                                android:id="@+id/planning_ingredient_reprint"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:src="@drawable/ic_print" />

                            <ImageView
                                android:id="@+id/planning_ingredient_delete"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:src="@drawable/ic_delete" />

                            <ImageView
                                android:id="@+id/planning_ingredient_less_option"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:src="@drawable/ic_left" />

                        </LinearLayout>
                    </FrameLayout>


                </LinearLayout>


            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>